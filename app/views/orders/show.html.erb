<section class="orders-show">

  <header class="page-header">
    <h1>Order #<%= @order.id %></h1>
  </header>

  <div class="order-summary jumbotron">
    <h4>Thank you for your order! Receipt sent to <%= User.find(session[:user_id]).email %>.</h4>
  </div>

  <% @order.line_items.each do |item| %>
    <%= render 'item', product: item.product, quantity: item.quantity.to_i %>
  <% end %>

  <div class="jumbotron"><h4>Order Total: <%= number_to_currency(@order.line_items.reduce(0) {|sum, item| sum + (item.product.price * item.quantity) }) %></h4></div>

  <%= link_to "Continue Shopping", root_path, class: 'btn btn-lg btn-primary' %>

</section>
